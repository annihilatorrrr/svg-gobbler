{
  "manifest_version": 3,
  "name": "SVG Gobbler",
  "description": "Download and optimize icons, logos, and vector SVGs.",
  "version": "5.0.0",
  "homepage_url": "https://github.com/rossmoody/svg-gobbler",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": { "service_worker": "background.ts" },
  "action": { "default_title": "SVG Gobbler" },
  "icons": {
    "16": "assets/prod/16.png",
    "32": "assets/prod/32.png",
    "48": "assets/prod/48.png",
    "128": "assets/prod/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/**/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+G"
      }
    }
  },
  "host_permissions": []
}
